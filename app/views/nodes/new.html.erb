<section class="section">
  <div class="columns is-centered mt-6">
    <div class="column">
      <h1 class="title is-size-2">New Post</h1>
      <h2 class="title is-size-3">
        Creating
        <% if @parent.depth >= 2 %>reply<% end %>
        under <%= link_to "##{@parent.id}: #{@parent.title}", node_path(@parent) %>
      </h2>
      <%= render 'form_new_topic', parent_id: @parent.id, node: @node %>
    </div>
  </div>
</section>
