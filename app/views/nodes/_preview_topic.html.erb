<div class="card">
  <div class="card-content">
    <p class="title is-size-4 mb-1">
      <%= link_to node.title, node %>
    </p>
    <p class="border">
      <%= node.body.slice(0, 200) if node.body %>
    </p>
    <nav class="breadcrumb">
      <ul>
        <li><%= link_to node.formatted_name, author_path(node.author_id) %></li>
        <li><%= link_to node.username, user_path(node.user) %></li>
        <li class="is-active">
          <a><%= node.created_at %> / <%= time_ago_in_words(node.created_at || DateTime.now) %> ago</a>
        </li>
        <li class="is-active">
          <a>Children: <%= @node_id_to_children[node.id].count %></a>
        </li>
        <li class="is-active">
          <a>Descendants: <%= count_descendants(node) %></a>
        </li>
      </ul>
    </nav>
  </div>
  <div class="card-footer">
    <!--
    <span><%= link_to 'Show', node, class: "card-footer-item" %></span>
    <span><%= link_to 'Edit', edit_node_path(node), class: "card-footer-item" %></span>
    <span><%= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' }, class: "card-footer-item" %></span>
    -->
  </div>
</div>
