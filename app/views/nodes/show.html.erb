<% content_for :title do %>
  <%= @node.content_version.title %>
  <%# &ndash; <%= DateTime.now.to_s(:nice_date) %>
<% end %>
<% content_for :subtitle do %>
  CF Forum
<% end %>
<div class="columns mt-6 is-centered">
  <div class="column">
    <nav class="panel is-link">
      <div class="panel-heading">
        <%= @node.content_version&.title %>
      </div>
      <div class="panel-block">
        By: <%= @node.author&.name %>
      </div>
      <div class="panel-block">
        Date: <%= @node.created_at %>
      </div>
      <div class="panel-block">
        <%= @node.content_version.body %>
      </div>
    </nav>
    <div class="columns is-mobile">
      <div class="column">
        <%= link_to 'Edit', edit_node_path(@node), class: "button is-gray" %>
        <%= link_to 'Delete', node_path(@node), class: "button is-warning", method: :delete, data: { confirm: "Are you sure?" } %>
      </div>
      <div class="column">
      </div>
    </div>
  </div>
</div>

<h3 class='title'>Replies:</h3>

<% @node.children.each do |r| %>

<div class='columns is-centered'>
<div class='column'>
  <div class='panel'>
    <% if r.content_version.title %>
    <div class='panel-heading'>
      <%= r.content_version.title %>
    </div>
    <% end %>
    <div class='panel-block'>
      <%= r.content_version.body %>
    </div>
    <div class='panel-block'>
      <%= r.author&.name || "Anonymous" %>, <%= r.created_at %>
      <% if r.content_version.parent %>, <em>Updated at: <%= r.content_version.created_at %></em>
      <% end %>
      <% 
=begin %>
<% 
=end %>
    </div>
  </div>
</div>
</div>

<% end %>
