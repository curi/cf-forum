<section class="section">
  <div class="container grid">
    <div class="title is-2">
      <%= node.title_w_default %>
    </div>
    <div class="subtitle is-4">
      <%= link_to "View All Posts (#{node.n_children})", node %>
    </div>
    <% if node.n_children > 0 %>
      <div class="title is-5 mt-3">
        Recent Threads:
      </div>
      <% @children_lookup[node.id].each do |child| %>
        <div class="content">
          <%= link_to child.title_w_default, node_path(child), class: "is-link is-size-6" %>
          / Posted: <%= child.created_at %>
        </div>
      <% end %>
      <% if node.n_children > 10 %>
        todo: some 'see more' type thing
      <% end %>
    <% end %>
  </div>
</section>
