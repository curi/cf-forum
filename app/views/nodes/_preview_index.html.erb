<section class="section">
  <div class="container grid">
    <div class="title is-2">
      <%= node.content.title %>
    </div>
    <div class="subtitle is-4">
      <%= link_to "View All Posts (#{node.children.count})", node %>
    </div>
    <% if node.children.count > 0 %>
      <div class="title is-5 mt-3">
        Recent Threads:
      </div>
      <% node.children.limit(10).each do |child| %>
        <div class="content">
          <%= link_to child.content.title, node_path(child), class: "is-link is-size-6" %>
          / Posted: <%= child.created_at %>
        </div>
      <% end %>
      <% if node.children.count > 10 %>
        todo: some 'see more' type thing
      <% end %>
    <% end %>
  </div>
</section>
